<h2>HOME PAGE</h2>
<div class="mt-4">
    <div class="row">
        {{#each courses}}
        <div class="ol-sm-6 col-lg-4 card-item">
            <div class="card">
                <a href="/courses/{{this.slug}}">
                    <img class="card-img-top" src="{{this.image}}" alt="Card image cap">
                </a>
                <div class="card-body">
                    <a href="/courses/{{this.slug}}">
                        <h5 class="card-title">{{this._id}}</h5>
                    </a>
                    <h5 class="card-title">{{this.name}}</h5>
                    <p class="card-text">{{this.description}}</p>
                    <a href="#" class="btn btn-primary">By Courses</a>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>